<h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task| %>
      <li>
      	<% if task.completed %>
          <i class="far fa-check-square"></i>
        <% else %>
          <i class="far fa-square"></i>
        <% end %>
      	<%= link_to task.name, task_path(task) %>
      </li>
    <% end %>
  </ul>

<%= link_to "Create a task", new_path %>